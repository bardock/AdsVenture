@model AdsVenture.Presentation.ContentServer.Models.Slots.Form

@{
    var HtmlEntity = Html.ToInnerModel(x => x.Entity);
}

<form role="form" method="post">
    @if (!Model.IsNew)
    {
        @HtmlEntity.HiddenFor(m => m.ID)
    }

    <div class="form-group">
        <label for="@HtmlEntity.IdFor(m => m.Title)" class="control-label">
            @HtmlEntity.DisplayEntityNameFor(m => m.Title)
        </label>
        @HtmlEntity.Tags().TextBoxFor(m => m.Title).AddClass("form-control")
    </div>

    <div class="form-group">
        <label for="@HtmlEntity.IdFor(m => m.PublisherID)" class="control-label">
            @HtmlEntity.DisplayEntityNameFor(m => m.Publisher)
        </label>
        @(HtmlEntity.Tags().SelectFor(
                m => m.PublisherID,
                Model.PublisherOptions)
            .AddDefaultOption()
            .AddClass("form-control"))
    </div>

    <div class="form-group">
        <label for="@HtmlEntity.IdFor(m => m.ContentID)" class="control-label">
            @HtmlEntity.DisplayEntityNameFor(m => m.Content)
        </label>
        @(HtmlEntity.Tags().SelectFor(
                m => m.ContentID,
                Model.ContentOptions)
            .AddDefaultOption()
            .AddClass("form-control"))
    </div>

    <div class="">
        <button type="submit" class="btn btn-primary">@Resources.Global.Save</button>
        <a class="btn btn-link btn_negative" href="@Url.Action("")">@Resources.Global.Cancel</a>
    </div>
</form>