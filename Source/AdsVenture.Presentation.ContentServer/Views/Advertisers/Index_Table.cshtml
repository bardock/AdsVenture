@using AdsVenture.Core.Helpers.Extensions.Entities
@using AdsVenture.Commons.Entities.Resources

@model IEnumerable<Advertiser>

@{
    Layout = null;
    var HtmlItem = Html.ToItemModel();
}
<table id="datatable" class="table table-striped table-bordered dataTable">
    <thead>
        <tr>
            <th data-sortable="false">
                <input class="checkall" type="checkbox">
            </th>
           <th data-sort-field="@HtmlItem.DisplayLiteral((m) => m.ID)">
               @HtmlItem.DisplayNameFor((m) => m.ID)
           </th>
           <th data-sort-field="@HtmlItem.DisplayLiteral((m) => m.Description)">
               @Entities.MediaGroup
            </th>
            <th data-sort-field="@HtmlItem.DisplayLiteral((m) => m.Category.Description)">
                @Entities.Category
            </th>
            <th data-sort-field="@HtmlItem.DisplayLiteral((m) => m.CreatedBy.Name)">
                @Resources.Global.UploadedBy
            </th>
            <th data-sort-field="@HtmlItem.DisplayLiteral((m) => m.CreatedOn)">
                @Resources.Global.UploadDate
            </th>
            <th data-sort-field="@HtmlItem.DisplayLiteral((m) => m.LineColor)">
               @Resources.Global.LineColor
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            HtmlItem = Html.ToItemModel(m);
            <tr>
                <td>
                    <input type="checkbox" name="check-id" value="@m.ID">
                </td>
                <td>
                    <a href="javascript:void(0)" title="Open" onclick="view.edit.show(@m.ID)">
                        @m.ID
                    </a>
                </td>
                <td>
                    <span data-descriptor-field="@HtmlItem.DisplayLiteral(x => x.Description)">
                        @m.Description
                    </span>
                </td>
                <td>@m.Category.Description</td>
                <td>@m.CreatedBy.Name</td>
                <td>@m.CreatedOn.Format()</td>
                <td class="td_min linecolor">
                    <span style="background-color:@m.LineColor;"></span>
                </td>
            </tr>
        }
    </tbody>
</table>